{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["./types/node-shim.d.ts"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "src/database/cardRepository.ts",
    "src/database/useDatabase.ts",
    "src/database/bootstrap.ts",
    "src/types/**/*.ts",
    "types/**/*.d.ts"
  ]
}
